<!DOCTYPE html>
<html>
<head>
  <title>田川伊田駅舎ホテル 予約表</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'home', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<h1>予約フォーム</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @reservation, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :name, "お名前" %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :date, "日付" %>
        <%= f.date_field :date, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :checkin_time, "チェックイン時間" %>
        <%= f.select :checkin_time, (15..22).map { |h| ["#{h}:00", "#{h}:00"] }, {}, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :number, "人数" %>
        <div class="btn-group" role="group" aria-label="人数選択">
          <% (1..4).each do |num| %>
            <%= f.radio_button :number, num, class: 'btn-check' %>
            <%= f.label "number_#{num}", num, class: 'btn btn-outline-primary' %>
          <% end %>
        </div>
        <%= f.number_field :number, min: 1, class: 'form-control mt-2' %>
      </div>

      <div class="form-group">
        <%= f.label :accommodation, "宿泊数" %>
        <div class="btn-group" role="group" aria-label="宿泊数選択">
          <% (1..4).each do |num| %>
            <%= f.radio_button :accommodation, num, class: 'btn-check' %>
            <%= f.label "accommodation_#{num}", num, class: 'btn btn-outline-primary' %>
          <% end %>
        </div>
        <%= f.number_field :accommodation, min: 1, class: 'form-control mt-2' %>
      </div>

      <div class="form-group">
        <%= f.label :price, "料金" %>
        <div class="btn-group" role="group" aria-label="料金選択">
          <% [4200, 5040].each do |price| %>
            <%= f.radio_button :price, price, class: 'btn-check' %>
            <%= f.label "price_#{price}", "#{price}円", class: 'btn btn-outline-primary' %>
          <% end %>
        </div>
        <%= f.number_field :price, min: 0, class: 'form-control mt-2' %>
      </div>

      <%= f.submit "予約する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</body>
</html>